<div class="row" style="padding-right:2%;padding-left:2%">
    <div class="panel panel-default">
        <h2 class="blue_bg" style="float:left; width:100%; border-bottom:1px solid #e3e3e3; border-top:1px solid #e3e3e3; color:#fff; font-size:16px; font-weight:bold; margin:0; padding:5px 25px; line-height:32px">Üye Girişi</h2>
        <div class="panel-body">
            <article class="container-login center-block">
                <div class="tab-content tabs-login col-lg-12 col-md-12 col-sm-12 cols-xs-12">
                    <div id="login-access" class="tab-pane fade active in">

                        <h2><i class="glyphicon glyphicon-log-in"></i> Kullanıcı Girişi</h2>
                        @using (Html.BeginForm("Login", "Uye", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <form method="post" accept-charset="utf-8" autocomplete="off" role="form" class="form-horizontal">
                                <div class="form-group ">
                                    <label for="login" class="sr-only">Kullanıcı Adı</label>
                                    @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @type = "text", @class = "form-control", @name = "login", @id = "login_value", @placeholder = "Kullanıcı Adı", @tabindex = "1", @value = "" } })
                                    @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group ">
                                    <label for="password" class="sr-only">Şifre</label>
                                    @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @type = "password", @class = "form-control", @name = "password", @id = "password", @placeholder = "Şifre", @value = "", @tabindex = "2" } })
                                    @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })
                                </div>
                                <div class="checkbox">
                                    <label class="control-label" for="remember_me">
                                        <input type="checkbox" name="remember_me" id="remember_me" class="pull-left" tabindex="3" /> Beni Hatırla
                                    </label>
                                </div>
                                <br />
                                <div class="form-group ">
                                    <button type="submit" name="log-me-in" id="submit" tabindex="5" class="btn btn-lg btn-primary">Giriş Yap</button><br />
                                    @if (TempData["HataliGiris"] != null)
                                    {
                                        <br /><br />
                                        <span style="text-align:center;display:block">@TempData["HataliGiris"]</span>
                                    }
                                </div>
                            </form>
                            
                        }

                    </div>
                </div>
            </article>
            <div class="text-center">
            <a href="/Uye/SifremiUnuttum" name="SifremiUnuttum" id="SifremiUnuttum" tabindex="6"  class="btn btn-lg btn-default">Şifremi Unuttum</a>
            </div>
        </div>
    </div>
</div>

