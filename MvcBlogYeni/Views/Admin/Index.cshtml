
@{
    ViewBag.Title = "MVC Blog Admin Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Admin Paneli <small>İstatistik Özetleri</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> Panel
                </li>
            </ol>
        </div>
    </div>
    <!-- ViewBag.Istatistikler  içinde Yorum,Makale,Üye,Kategori sayılarını bir dizi halinde tutuyorum.-->
    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-comments fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@ViewBag.Istatistikler[0]</div>
                            <div>Yorumlar</div>
                        </div>
                    </div>
                </div>
                <a href="/Admin/Yorumlar/">
                    <div class="panel-footer">
                        <span class="pull-left">Görüntüle</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-file-text-o fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@ViewBag.Istatistikler[1]</div>
                            <div>Makaleler</div>
                        </div>
                    </div>
                </div>
                <a href="/Admin/Makaleler/">
                    <div class="panel-footer">
                        <span class="pull-left">Görüntüle</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-users fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@ViewBag.Istatistikler[2]</div>
                            <div>Üyeler</div>
                        </div>
                    </div>
                </div>
                <a href="/Admin/Uyeler/">
                    <div class="panel-footer">
                        <span class="pull-left">Görüntüle</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-red">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-bars fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@ViewBag.Istatistikler[3]</div>
                            <div>Kategoriler</div>
                        </div>
                    </div>
                </div>
                <a href="/Admin/Kategoriler/">
                    <div class="panel-footer">
                        <span class="pull-left">Görüntüle</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-users fa-fw"></i> Yeni Üyelikler</h3>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        @foreach (var item in ViewBag.YeniUyelikler)
                        {
                            <li class="list-group-item"><a href="/Uye/Index/@item.UyeID" target="_blank">@item.KullaniciAdi</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Son Hareketler</h3>
                </div>
                <div class="panel-body">
                    <div class="list-group">
                        @foreach (var item in ViewBag.SonHareketler)
                        {
                            <a class="list-group-item">
                                <span class="badge">@item.Tarih</span>
                                <i class="fa fa-fw fa-calendar"></i><br />@item.HareketAdi
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
